<%- include('./partials/header.ejs') %>
<%- include('./partials/navbar.ejs') %>
<style>
  body{
    background: rgba(2, 0, 36, 0.568);
  background: linear-gradient(90deg, rgba(91, 88, 139, 0.479) 0%, rgba(9, 9, 121, 0.445) 35%, rgba(0, 213, 255, 0.438) 100%);}
</style>



<div class="container">
  <h4 class="text-center">
    Repayment Requests 
  </h4>
    <table class="table">
        <thead class="table-success">
         <tr class="text-center">
           <td>Phone </td>
             <td>Order Id </td>
             <td>Actions </td>
         </tr>
        </thead>
        <tbody>
            <% for(var i=0; i < repay.length; i++) { %>
                <tr class="text-center">
                  <td><%= repay[i].phone %></td>
                  <td><%= repay[i].order_id %></td>

                  <td><a href="repayment/approved/<%= repay[i].id %>" class="btn btn-sm btn-success px-2">Approve </a>
                  <a href="repayment/rejected/<%= repay[i].id %>" class="btn btn-sm btn-outline-success px-2">Reject </a>
                  </td>
                </tr>
             <% } %>
        </tbody>
      </table>
</div>





